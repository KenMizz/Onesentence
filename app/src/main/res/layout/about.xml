<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/appIconView"
        android:layout_width="86dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/materialTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="@+id/appIconView"
        app:layout_constraintStart_toStartOf="@+id/appIconView"
        app:layout_constraintTop_toBottomOf="@+id/appIconView" />

    <TextView
        android:id="@+id/versionView"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/appIconView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/appIconView"
        app:layout_constraintTop_toBottomOf="@+id/materialTextView" />

    <TextView
        android:id="@+id/coolApkLinkView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/coolapk_hyperlink"
        app:layout_constraintEnd_toEndOf="@+id/versionView"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/versionView"
        app:layout_constraintTop_toBottomOf="@+id/versionView" />

    <TextView
        android:id="@+id/githubLinkView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/github_hyperlink"
        app:layout_constraintEnd_toEndOf="@+id/coolApkLinkView"
        app:layout_constraintStart_toStartOf="@+id/coolApkLinkView"
        app:layout_constraintTop_toBottomOf="@+id/coolApkLinkView" />


</androidx.constraintlayout.widget.ConstraintLayout>
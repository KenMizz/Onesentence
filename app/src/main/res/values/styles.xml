<resources>

    <!--Material 2 styles-->
    <style name="style.md2.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="errorTextColor">@color/dark</item>
    </style>

    <style name="style.md2.AlertDialogTheme.Grey" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleDark</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleDark</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyleDark</item>
    </style>

    <style name="style.md2.AlertDialogTheme.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleDark</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleDark</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyleDark</item>
        <item name="errorTextColor">@color/white</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark</item>
        <item name="rippleColor">@color/ripple_material_light</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark</item>
        <item name="rippleColor">@color/ripple_material_light</item>
    </style>

    <style name="NeutralButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark</item>
        <item name="rippleColor">@color/ripple_material_light</item>
    </style>

    <style name="PositiveButtonStyleDark" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/ripple_material_dark</item>
    </style>

    <style name="NegativeButtonStyleDark" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/ripple_material_dark</item>
    </style>

    <style name="NeutralButtonStyleDark" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/ripple_material_dark</item>
    </style>

    <style name="MaterialRadioButtonOverlay" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorOnSurface">@color/dark</item>
        <item name="colorSecondary">@color/dark</item>
    </style>

    <style name="MaterialRadioButtonOverlayGrey" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorOnSurface">@color/dark</item>
        <item name="colorSecondary">@color/dark</item>
    </style>

    <style name="MaterialRadioButtonOverlayDark" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="MaterialAlertDialogWithNoTitle" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopupMenuStyleDark" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:popupBackground">@color/dark</item>
    </style>

    <style name="PopupMenuStyleGrey" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:popupBackground">@color/grey</item>
    </style>

    <style name="TabLayoutLight" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/dark</item>
        <item name="tabIndicatorColor">@color/dark</item>
    </style>

    <style name="TabLayoutGrey" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="TabLayoutDark" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="ToolBarDark" parent="Widget.Material3.Toolbar.OnSurface">
        <item name="android:background">@color/dark</item>
    </style>

</resources>
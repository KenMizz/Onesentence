<resources>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeturalButtonStyle</item>
    </style>

    <style name="AlertDialogThemeGrey" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleDark</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleDark</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeturalButtonStyleDark</item>
    </style>

    <style name="AlertDialogThemeDark" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleDark</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleDark</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeturalButtonStyleDark</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="NeturalButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="PositiveButtonStyleDark" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NegativeButtonStyleDark" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NeturalButtonStyleDark" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialRadioButtonOverlay" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorOnSurface">@color/dark</item>
        <item name="colorSecondary">@color/dark</item>
    </style>

    <style name="MaterialRadioButtonOverlayGrey" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorOnSurface">@color/dark</item>
        <item name="colorSecondary">@color/dark</item>
    </style>

    <style name="MaterialRadioButtonOverlayDark" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="MaterialAlertDialogWithNoTitle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopupMenuStyleDark" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:popupBackground">@color/dark</item>
    </style>

    <style name="PopupMenuStyleGrey" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:popupBackground">@color/grey</item>
    </style>


</resources>
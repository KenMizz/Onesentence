<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/grey_300</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/dark</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="radioButtonStyle">@style/MaterialRadioButtonOverlay</item>
        <item name="tabStyle">@style/TabLayoutLight</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:colorControlActivated">@color/dark</item>
        <item name="rippleColor">@color/ripple_material_light</item>
        <!--navigation bar color-->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AppThemeGrey" parent="ThemeOverlay.Material3.Dark">
        <item name="colorPrimary">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="errorTextColor">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogThemeGrey</item>
        <item name="radioButtonStyle">@style/MaterialRadioButtonOverlayGrey</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuStyleGrey</item>
        <item name="tabStyle">@style/TabLayoutDark</item>
        <item name="android:colorControlActivated">@color/white</item>
        <!--navigation bar color-->
        <item name="android:navigationBarColor">@color/grey</item>
    </style>

    <style name="AppThemeDark" parent="ThemeOverlay.Material3.Dark">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogThemeDark</item>
        <item name="radioButtonStyle">@style/MaterialRadioButtonOverlayDark</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuStyleDark</item>
        <item name="tabStyle">@style/TabLayoutDark</item>
        <item name="android:colorControlActivated">@color/white</item>
        <!--navigation bar color-->
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <style name="AppConfigurationTheme" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="colorPrimaryDark">@color/grey_300</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/dark</item>
        <!--navigation bar color-->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AppConfigurationTheme.Grey" parent="ThemeOverlay.Material3.Dark">
        <item name="colorPrimary">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="errorTextColor">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <!--navigation bar color-->
        <item name="android:navigationBarColor">@color/grey</item>
    </style>

    <style name="AppConfigurationTheme.Dark" parent="ThemeOverlay.Material3.Dark">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <!--navigation bar color-->
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

<resources>

    <!--Material 3 Themes for Android S+ Device-->
    <style name="AppTheme.md3.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="android:statusBarColor">?attr/colorSurfaceVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.md3.Grey" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryContainer">@color/dark</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.md3.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/dark</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryContainer">@color/grey</item>
        <item name="colorSurface">@color/dark</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuStyleDark</item>
        <item name="toolbarStyle">@style/ToolBarDark</item>
        <item name="tabStyle">@style/style.md3.TabLayoutDark</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <style name="AppConfigurationTheme.md3.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="android:statusBarColor">?attr/colorSurfaceVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="AppConfigurationTheme.md3.Grey" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryContainer">@color/dark</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="AppConfigurationTheme.md3.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/dark</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryContainer">@color/grey</item>
        <item name="toolbarStyle">@style/ToolBarDark</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <!--Material 2 Theme-->
    <style name="AppTheme.md2.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSurface">@color/dark</item>
        <item name="materialAlertDialogTheme">@style/style.md2.AlertDialogTheme</item>
        <item name="radioButtonStyle">@style/MaterialRadioButtonOverlay</item>
        <item name="tabStyle">@style/TabLayoutLight</item>
        <item name="textInputOutlinedStyle">@style/style.md2.TextInputLayoutStyleLight</item>
        <item name="android:statusBarColor">@color/grey_300</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="AppTheme.md2.Grey" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialAlertDialogTheme">@style/style.md2.AlertDialogTheme.Grey</item>
        <item name="radioButtonStyle">@style/MaterialRadioButtonOverlayGrey</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuStyleGrey</item>
        <item name="tabStyle">@style/TabLayoutGrey</item>
        <item name="textInputOutlinedStyle">@style/style.md2.TextInputLayoutStyleDark</item>
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="android:navigationBarColor">@color/dark_grey</item>
    </style>

    <style name="AppTheme.md2.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/dark</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/dark</item>
        <item name="materialAlertDialogTheme">@style/style.md2.AlertDialogTheme.Dark</item>
        <item name="radioButtonStyle">@style/MaterialRadioButtonOverlayDark</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuStyleDark</item>
        <item name="tabStyle">@style/style.md2.TabLayoutDark</item>
        <item name="textInputOutlinedStyle">@style/style.md2.TextInputLayoutStyleDark</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <style name="AppConfigurationTheme.md2.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="colorPrimaryDark">@color/grey_300</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/dark</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AppConfigurationTheme.md2.Grey" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="errorTextColor">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/grey</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:navigationBarColor">@color/grey</item>
    </style>

    <style name="AppConfigurationTheme.md2.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
